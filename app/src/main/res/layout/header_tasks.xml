<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_inbox"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_inbox_blue"
                android:layout_margin="@dimen/margin_image_groupwork"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/inbox"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:id="@+id/txt_inbox_count_completed"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingRight="2dp"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_blue"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:paddingEnd="2dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/txt_inbox_count_overdue"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_pink"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:id="@+id/txt_inbox_count_all"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/colorEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_assigned_to_me"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_assigned_yellow"
                android:layout_margin="@dimen/margin_image_groupwork"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/assigned_to_me"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_marginStart="5dp"
                android:id="@+id/txt_assigned_count_overdue"
                android:paddingEnd="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_pink"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:id="@+id/txt_assigned_count_all"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/colorEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_starred"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_starred_red"
                android:layout_margin="@dimen/margin_image_groupwork"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/starred"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_marginStart="5dp"
                android:paddingEnd="2dp"
                android:id="@+id/txt_starred_count_overdue"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_pink"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/txt_starred_count_all"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/colorEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_today"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_toStartOf="@+id/btn_search"
                android:layout_margin="@dimen/margin_image_groupwork"
                android:id="@+id/rlt_conversation">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/ic_today_green"
                    android:id="@+id/btn_conversation"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#160;"
                    android:id="@+id/day_current"
                    android:textSize="11sp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="9dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGreen2"/>
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/today"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_marginStart="5dp"
                android:paddingEnd="2dp"
                android:id="@+id/txt_today_count_overdue"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_pink"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:id="@+id/txt_today_count_all"
                android:textStyle="bold"
                android:textColor="@color/colorEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_week"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_week_purple"
                android:layout_margin="@dimen/margin_image_groupwork"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/week"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_marginStart="5dp"
                android:paddingEnd="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/txt_week_count_overdue"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_pink"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/txt_week_count_all"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/colorEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_all"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_all_brown"
                android:layout_margin="@dimen/margin_image_groupwork"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/all"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_marginStart="5dp"
                android:id="@+id/txt_all_count_overdue"
                android:paddingEnd="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:background="@drawable/circle_pink"
                android:textColor="@color/colorRed"/>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="10"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/txt_all_count_all"
                android:textSize="@dimen/dimen_12sp"
                android:textStyle="bold"
                android:textColor="@color/colorEditText"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:id="@+id/lnl_completed"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_completed_gray"
                android:layout_margin="@dimen/margin_image_groupwork"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="@string/completed"
                android:textSize="@dimen/dimen_16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="2dp"
                />
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:paddingEnd="2dp"
                android:layout_gravity="center_vertical"
                />
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
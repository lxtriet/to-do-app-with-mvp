<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    android:background="@color/colorGray100">
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:orientation="horizontal"
        android:background="@drawable/border_topbot_gray"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/tv_title"
            android:paddingLeft="10dp"
            android:text="Remind me"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:gravity="center"/>
    </LinearLayout>
    <CalendarView
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:id="@+id/calendar_reminder"
        android:focusedMonthDateColor="@color/blue"
        >
    </CalendarView>
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_groupwork_50dp"
        android:orientation="horizontal"
        android:background="@drawable/border_topbot_gray"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:id="@+id/lnl_time_reminder"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_reminder_on"
                android:id="@+id/iv_img_time_reminder"
                android:layout_margin="7dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/tv_time_reminder"
                android:paddingLeft="10dp"
                android:text="Remind me"
                android:textSize="14sp"
                android:textColor="@color/colorBlue"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:layout_toStartOf="@+id/tv_save"
            android:layout_margin="15dp"
            android:textColor="@color/blue"
            android:id="@+id/tv_remove"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:id="@+id/tv_save"
            android:textColor="@color/blue"
            android:layout_margin="15dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</LinearLayout>